<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.audio.AudioRecorderActivity">

    <Button
        android:id="@+id/btn_audio_record_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录制" />

    <Button
        android:id="@+id/btn_audio_record_audio_track_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AudioTrack播放"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_audio_record_media_player_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MediaPlayer播放"
        android:textAllCaps="false" />

</LinearLayout>
